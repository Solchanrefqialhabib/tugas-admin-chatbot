<!DOCTYPE html>
<html>
<head>
  <title>Dashboard Store</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container">
  <h1>ðŸ“Š Dashboard Store Management</h1>

  <div class="flex">
    <!-- ADMIN -->
    <div style="flex:2">
      <div class="card">
        <h3>Input Pembelian</h3>
        <form action="/buy" method="POST">
          <select name="product_id">
            <% products.forEach(p => { %>
              <option value="<%= p.id %>">
                <%= p.name %> - Rp<%= p.price %> (Stok: <%= p.qty %>)
              </option>
            <% }) %>
          </select>
          <input type="number" name="qty" value="1">
          <button class="btn">Proses</button>
        </form>
      </div>

      <div class="card">
        <h3>Transaksi Terakhir</h3>
        <table width="100%">
          <tr>
            <th>Produk</th>
            <th>Qty</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>

          <% purchases.forEach(t => { %>
            <tr>
              <td><%= t.name %></td>
              <td><%= t.qty %></td>
              <td>
                <% if(t.status === 'SUCCESS'){ %>
                  <span class="badge-success">SUCCESS</span>
                <% } else { %>
                  <span class="badge-cancel">CANCELLED</span>
                <% } %>
              </td>
              <td>
                <% if(t.status === 'SUCCESS'){ %>
                  <form action="/cancel/<%= t.id %>" method="POST">
                    <button class="btn btn-danger">Cancel</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </table>
      </div>
    </div>

<!-- CHATBOT -->
<div style="flex:1">
  <div class="card">
    <h3>ðŸ¤– AI Business Consultant</h3>

    <div id="chatbox" class="chat-box"></div>

    <div id="typing" class="typing">AI sedang mengetik...</div>

    <input
      id="msg"
      placeholder="Ketik pesan lalu tekan Enter..."
      style="width:100%; margin-top:8px;"
    />
  </div>
</div>


<script src="/js/chat.js"></script>
</body>
</html>
